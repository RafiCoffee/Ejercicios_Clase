<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/NegroFondo"
    tools:context=".ChistesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp">

        <ImageButton
            android:id="@+id/volverBt"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:padding="10dp"
            android:background="@drawable/borde_redondo"
            android:src="@drawable/volver_logo"
            android:scaleType="centerCrop"
            android:translationY="20dp"
            android:translationX="20dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/cargadorChistes"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/chisteText"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:padding="25dp"
            android:fontFamily="@font/lost_emerald_font"
            android:textColor="@color/Blanco"
            android:textSize="20sp"
            android:textAlignment="center"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/chisteBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/borde_redondo"
            android:layout_centerInParent="true"
            android:translationY="100dp"
            android:padding="20dp"
            android:text="@string/generar_chiste"
            android:textSize="20sp"/>

    </RelativeLayout>

</LinearLayout>